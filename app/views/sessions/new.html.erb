<h1>Sign In</h1>

<%= form_with local: true, url: sign_in_path do |form| %>

    <div class="mb-3">
        <%= form.label :email %>
        <%= form.text_field :email, class: "form-control", placeholder: "mojemail@domena.com" %>
    </div>

    <div class="mb-3">
        <%= form.label :password %>
        <%= form.password_field :password, class: "form-control", placeholder: "heslo"%>
        <%= link_to "Forgot your password?", password_reset_path %>
    </div>

    <div class="mb-3">
        <%= form.submit "Prihlásiť sa", class: "btn btn-primary" %>
    </div>

<% end %>